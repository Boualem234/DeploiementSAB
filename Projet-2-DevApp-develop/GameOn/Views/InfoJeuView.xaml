<UserControl x:Class="GameOn.Views.InfoJeuView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GameOn.Views"
             mc:Ignorable="d" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:viewmodel="clr-namespace:GameOn.ViewModels"
             d:DataContext="{d:DesignInstance Type=viewmodel:InfoJeuVM}"
                          HorizontalAlignment="Stretch" 
             VerticalAlignment="Stretch"
             d:DesignHeight="450" d:DesignWidth="800" Background="White">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1.5*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition/>
            <RowDefinition Height="70"/>
            <RowDefinition Height="70"/>
        </Grid.RowDefinitions>

        <!-- Règles -->
        <GroupBox
            Grid.RowSpan="4"
            Margin="30"
            Header="Règlements"
            materialDesign:GroupBoxAssist.HeaderPadding="4"
            Padding="0"
            Style="{StaticResource MaterialDesignGroupBox}">
            <ScrollViewer
                Padding="4"
                materialDesign:ScrollViewerAssist.PaddingMode="Default">
                <StackPanel>
                    <TextBlock
                        Margin="4"
                        TextWrapping="Wrap"
                        Text="{Binding Jeu.Regles}" />
                </StackPanel>
            </ScrollViewer>
        </GroupBox>

        <!-- Titre du jeu -->
        <TextBlock 
            Grid.Row="0"
            Grid.Column="1"
            VerticalAlignment="Center"
            HorizontalAlignment="Center"
            Text="{Binding Jeu.Nom}"
            FontSize="26"
            FontWeight="SemiBold"
            Foreground="Black"
            Margin="0,30,0,0" />

        <!-- Classement du jeu -->
        <TextBlock 
            Grid.Row="1" 
            Grid.Column="1"
            TextWrapping="Wrap" 
            HorizontalAlignment="Center" 
            VerticalAlignment="Center" 
            FontSize="25" 
            Text="Classement du jeu en cours de développement!" 
            Margin="0,0,10,0"
            Foreground="Black"/>

        <!-- Boutton Jouer -->
        <Button
            Grid.Column="1"
            Grid.Row="2"
            Content="Jouer"
            Height="40"
            Margin="0,0,10,0"
            Style="{StaticResource MaterialDesignRaisedButton}"
            materialDesign:ButtonAssist.CornerRadius="20"
            Foreground="White"
            Background="Green"
            BorderThickness="0" Click="Button_JouerJeu"/>

        <!-- Boutton Retour -->
        <Button
            Grid.Column="1"
            Grid.Row="3"
            Content="Retour"
            Height="40"
            Margin="0,0,10,30"
            Style="{StaticResource MaterialDesignRaisedButton}"
            materialDesign:ButtonAssist.CornerRadius="20"
            Foreground="White" Click="Button_retour"/>

    </Grid>
</UserControl>