        <!-- Bouton quitter -->
        <Grid Grid.Column="2" Grid.Row="1" Margin="50,20,50,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <!-- Label nombre d'essais -->
            <Label
                Grid.Column="0"
                Content="Nombre d'essais: "
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontSize="18"/>

            <!-- Nombre d'essais -->
            <TextBlock 
                Grid.Column="1" 
                TextWrapping="Wrap" 
                Text="{Binding Essaie, StringFormat={}{0}/3}" 
                FontSize="18" 
                Margin="0,0,10,0"
                VerticalAlignment="Center" 
                HorizontalAlignment="Center"/>

            <!-- Boutton quitter -->
            <Button 
                Grid.Column="2"
                Content="Quitter"
                Style="{StaticResource MaterialDesignRaisedLightButton}"
                Background="Red"
                Foreground="White"
                BorderThickness="0" Cursor="Hand" Click="Button_Quitter"/>
