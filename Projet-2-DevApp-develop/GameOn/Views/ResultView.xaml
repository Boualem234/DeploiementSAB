<UserControl x:Class="GameOn.Views.ResultView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GameOn.Views"
             mc:Ignorable="d" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:viewmodel="clr-namespace:GameOn.ViewModels"
             d:DataContext="{d:DesignInstance Type=viewmodel:ResultVM}"
             d:DesignHeight="450" d:DesignWidth="800" Background="White">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="100"/>
            <RowDefinition Height="200"/>
            <RowDefinition Height="60"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <!-- Titre -->
        <TextBlock 
            Grid.Row="1"
            VerticalAlignment="Center"
            HorizontalAlignment="Center"
            Text="{Binding Titre}"
            FontSize="32"
            FontWeight="SemiBold"
            Foreground="Black"
            Margin="0,10,0,10" />
        
        <!-- Message -->
        <TextBlock 
            Grid.Row="2"
            VerticalAlignment="Top"
            HorizontalAlignment="Center"
            Text="{Binding Message}"
            FontSize="20"
            FontWeight="SemiBold"
            TextWrapping="Wrap"
            Foreground="Black"
            Margin="15,20,15,0" />
        
        <!-- Boutton menu -->
        <Button
            Grid.Row="3"
            Content="Retour au menu principal"
            Margin="200,10,200,10"
            Style="{StaticResource MaterialDesignRaisedButton}"
            materialDesign:ButtonAssist.CornerRadius="20"
            BorderThickness="0" Click="RetourMenu"/>
    </Grid>
</UserControl>
