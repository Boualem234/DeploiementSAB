<UserControl x:Class="GameOn.Views.MenuView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GameOn.Views"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:viewmodel="clr-namespace:GameOn.ViewModels"
             xmlns:converters="clr-namespace:GameOn.Views.Converters"
             d:DataContext="{d:DesignInstance Type=viewmodel:MenuVM}"
             mc:Ignorable="d" 
             HorizontalAlignment="Stretch" 
             VerticalAlignment="Stretch"
             d:DesignHeight="450" d:DesignWidth="1100"
             MinHeight="450" MinWidth="1100" 
             Background="White">

    <UserControl.Resources>
        <converters:BoolOuiNonConverter x:Key="BoolOuiNonConverter"/>
    </UserControl.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="180"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <DockPanel Background="#2E3B4E" Grid.Column="0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" VerticalAlignment="Top">
                    <TextBlock Text="GameOn"
                               Foreground="White"
                               FontSize="22"
                               FontWeight="Bold"
                               Margin="30,30,0,40"/>

                    <Button Content="🎮  Jouer"
                            Margin="10"
                            Height="45"
                            Foreground="White"
                            FontWeight="SemiBold"
                            Style="{StaticResource MaterialDesignRaisedButton}"
                            materialDesign:ButtonAssist.CornerRadius="10"
                            Click="Button_Jouer"/>

                    <Button Content="🏆  Classement"
                            Margin="10"
                            Height="45"
                            Foreground="White"
                            Style="{StaticResource MaterialDesignFlatButton}"
                            materialDesign:ButtonAssist.CornerRadius="10"/>

                    <Button x:Name="AdminButton"
        Content="📝 Administration"
        Height="45"
        Foreground="White"
        materialDesign:ButtonAssist.CornerRadius="10"
        Click="Button_Admin"
        Visibility="Collapsed"/>



                </StackPanel>

                <StackPanel Grid.Row="1" VerticalAlignment="Top">
                    <Button x:Name="LoginButton"
                            Grid.Row="1"
                            Content="Se déconnecter"
                            Command="{Binding LogoutCommand}"
                            Height="25"
                            Width="120"
                            FontSize="12"
                            Padding="5,0"
                            Margin="10"
                            Style="{StaticResource MaterialDesignRaisedButton}"
                            materialDesign:ButtonAssist.CornerRadius="15"
                            Foreground="White"/>

                    <Button Grid.Row="1"
                            Content="⚙️"
                            Width="60" Height="60"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Style="{StaticResource MaterialDesignFlatButton}"
                            Foreground="White"/>
                </StackPanel>
            </Grid>
        </DockPanel>

        <Grid x:Name="MainGrid" Grid.Column="1">
            <local:JeuxView x:Name="jeuxV" Visibility="Hidden"/>
            <local:InfoJeuView x:Name="infoJeuV" Visibility="Visible"/>
        </Grid>
    </Grid>
</UserControl>
