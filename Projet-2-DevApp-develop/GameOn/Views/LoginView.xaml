<UserControl x:Class="GameOn.Views.LoginView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GameOn.Views"
             mc:Ignorable="d" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:viewmodel="clr-namespace:GameOn.ViewModels"
             d:DataContext="{d:DesignInstance Type=viewmodel:LoginVM}"
             d:DesignHeight="450" d:DesignWidth="800" 
                          HorizontalAlignment="Stretch" 
             VerticalAlignment="Stretch"
             Background="White">

    <Grid>
        <Border BorderThickness="5"
                CornerRadius="10"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Padding="20">
            <Border.BorderBrush>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="DarkBlue" Offset="0" />
                    <GradientStop Color="LightBlue" Offset="1" />
                </LinearGradientBrush>
            </Border.BorderBrush>

            <materialDesign:Card Padding="20" Background="White">
                <StackPanel Width="280" Orientation="Vertical" HorizontalAlignment="Center">

                    <Image Source="/img/logoGameOn2.png" 
                           Width="120" Height="80" 
                           Margin="0,0,0,20" 
                           HorizontalAlignment="Center" />

                    <TextBlock Text="Connexion"
                               FontSize="26"
                               FontWeight="SemiBold"
                               Foreground="Black"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,20" />

                    <TextBox x:Name="IDTextBox"
                             Text="{Binding Id}"
                             materialDesign:HintAssist.Hint="Identifiant"
                             Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                             Margin="0,0,0,15"
                             KeyDown="Control_KeyDown">
                    </TextBox>

                    <PasswordBox x:Name="PasswordBox"
                                 PasswordChanged="PasswordBox_PasswordChanged"
                                 materialDesign:HintAssist.Hint="Mot de passe"
                                 materialDesign:TextFieldAssist.HasClearButton="True"
                                 Style="{StaticResource MaterialDesignFloatingHintRevealPasswordBox}"
                                 Margin="0,0,0,25"
                                 KeyDown="Control_KeyDown"/>


                    <TextBlock
                               Text="{Binding Erreur}"
                               Foreground="Red"
                               FontSize="12"
                               Margin="0,0,0,18"
                               TextWrapping="Wrap" />

                    <Button x:Name="LoginButton"
                            Content="Se connecter"
                            Command="{Binding CheckConnexionCommand}"
                            Height="40"
                            Style="{StaticResource MaterialDesignRaisedButton}"
                            materialDesign:ButtonAssist.CornerRadius="20"
                            Foreground="White"/>

                </StackPanel>
            </materialDesign:Card>
        </Border>
    </Grid>

</UserControl>